{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "preserveConstEnums": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "outDir": "build",
    "rootDirs": ["."],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@logger": ["./src/logger/index.ts"],
      "@certs/*": ["src/certs/*"],
      "@db/*": ["src/db/*"],
      "@errors/*": ["src/errors/*"],
      "@routers/*": ["src/routers/*"],
      "@types/*": ["src/types/*"],
      "@api/*": ["src/api/*"],
      "@utils/*": ["src/utils/*"],
      "@constants/*": ["src/constants/*"],
      "@middlewares/*": ["src/middlewares/*"]
    }
  },
  "includes": [
    "./*.js",
    "src/**/*.ts",
    "./.env.d.ts",
    "./certs/*",
    "./src/types/*"
  ],
  "exclude": ["node_modules", ".vscode", "./build", "src/pocketbase"]
}
